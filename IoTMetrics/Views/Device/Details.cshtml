@model IEnumerable<IoTMetrics.Models.Models.Metric>

@{
    ViewData["Title"] = "Details";
}

<h1>Details @ViewData["DeviceName"]</h1>

<p>
    <a asp-controller="Metrics" asp-action="NewMetric" asp-route-deviceId="@ViewData["DeviceId"]" class="btn btn-outline-success btn-sm">New Metric</a>
    <a asp-controller="Device" asp-action="Search" asp-route-id="@ViewData["DeviceId"]" class="btn btn-outline-success btn-sm">Search</a>
</p>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                <div class="row">
                    <form asp-controller="Metrics" asp-action="Delete" asp-route-id="@item.Id" onclick="confirm('Are you sure to delete the @item.Name metric ?')">
                        <button type="submit" class="btn btn-danger btn-sm rounded-circle"><i class="fa fa-times-circle"></i></button>
                    </form>
                </div>
            </td>
            
        </tr>
}
    </tbody>
</table>
