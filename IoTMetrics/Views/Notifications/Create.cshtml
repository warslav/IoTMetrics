@model IoTMetrics.Models.Models.Notification

@{
    ViewData["Title"] = "New Notification";
}

<h4>New Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label col-form-label-s"></label>
                <input asp-for="Name" class="form-control form-control-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinValue" class="control-label col-form-label-sm"></label>
                <input asp-for="MinValue" class="form-control form-control-sm" />
                <span asp-validation-for="MinValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxValue" class="control-label col-form-label-sm"></label>
                <input asp-for="MaxValue" class="form-control form-control-sm" />
                <span asp-validation-for="MaxValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label col-form-label-sm"></label>
                <input asp-for="Condition" class="form-control form-control-sm" />
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label col-form-label-sm"></label>
                <input asp-for="Email" class="form-control form-control-sm" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success btn-sm" /> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Back to notifications</a>
            </div>
        </form>
    </div>
</div>
