@model IEnumerable<IoTMetrics.Models.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-outline-success btn-sm">New Notification</a>
</p>
<table class="table table-hover table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <div class="row">
                    <a asp-controller="Notifications" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-circle">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>
                    <form asp-controller="Notifications" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure to delete the @item.Name notification ?')">
                        <button type="submit" class="btn btn-danger btn-sm rounded-circle"><i class="fa fa-times-circle"></i></button>
                    </form>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
